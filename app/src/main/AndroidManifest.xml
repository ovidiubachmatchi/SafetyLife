<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.protect.safetylife">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme">

        <activity android:name=".DashboardActivity" android:launchMode="singleTop"> </activity>
        <activity android:name=".signup.SignUp1Activity" android:launchMode="singleTop" android:theme="@style/Transparent"> </activity>
        <activity android:name=".signup.SignUp2Activity" android:launchMode="singleTop" android:theme="@style/Transparent"> </activity>
        <activity android:name=".signup.SignUp3Activity" android:launchMode="singleTop" android:theme="@style/Transparent"> </activity>
        <activity android:name=".signup.SignUp4Activity" android:launchMode="singleTop" android:theme="@style/Transparent"> </activity>
        <activity android:name=".login.LogInActivity" android:launchMode="singleTop" android:theme="@style/Transparent"> </activity>

        <activity android:name=".LandingActivity"
            android:exported="true">
            <!-- application starting activity -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:enabled="true" android:name=".ScreenOnOffBackgroundService" />
        <meta-data   android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>